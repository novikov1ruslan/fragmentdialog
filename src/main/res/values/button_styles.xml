<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- buttons -->
    <style name="Button" parent="@style/ButtonAppTheme">
        <item name="android:textSize">@dimen/text_ml</item>
        <item name="android:textColor">@color/dark_button_text</item>
    </style>

    <style name="Button.Dialog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Button.Dialog.Single">
        <item name="android:layout_marginLeft">@dimen/dialog_single_button_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/dialog_single_button_horizontal_margin</item>
    </style>

</resources>