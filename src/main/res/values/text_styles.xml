<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- texts -->
    <style name="TextAppearance">
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- 13 -->
    <style name="TextAppearance.Dialog">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="DialogErrorText" parent="@android:Widget.TextView">
        <item name="android:textColor">@color/custom_dialog_error_text</item>
        <item name="android:textAppearance">@style/TextAppearance.Dialog</item>
    </style>

    <!-- 16 -->
    <style name="TextAppearance.MediumLarge">
        <item name="android:textSize">@dimen/text_ml</item>
    </style>

    <style name="DialogFieldLabel" parent="@android:Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.MediumLarge</item>
    </style>

    <!-- 18 -->
    <style name="TextAppearance.Large">
        <item name="android:textSize">@dimen/text_l</item>
    </style>

    <style name="DialogText" parent="@android:Widget.TextView">

        <!-- <item name="android:textAppearance">@style/TextAppearance.Large</item> -->
        <item name="android:textSize">@dimen/text_l</item>
    </style>

    <!-- 22 -->
    <style name="TextAppearance.XXLarge">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="DialogTitleText" parent="@android:Widget.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/dialog_title_text</item>
        <item name="android:textAppearance">@style/TextAppearance.XXLarge</item>
        <item name="android:layout_height">@dimen/dialog_title_height</item>
        <item name="android:layout_marginLeft">@dimen/dialog_horizontal_margin</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:minWidth">320dp</item>
        <!-- this is workaround to keep dialog match_parrent -->
    </style>

</resources>