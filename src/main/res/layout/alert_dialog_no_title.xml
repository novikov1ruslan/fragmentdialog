<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/DialogFrame"
	android:layout_width="match_parent"
	android:orientation="vertical"
	tools:context=".DialogsTester"
	tools:ignore="HardcodedText" >

	<TextView
		android:id="@+id/dialog_text"
		style="@style/DialogText"
		android:layout_marginBottom="@dimen/dialog_text_vertical_margin"
		android:layout_marginLeft="@dimen/dialog_horizontal_margin"
		android:layout_marginRight="@dimen/dialog_horizontal_margin"
		android:layout_marginTop="20dp"
		android:text="Your message was not sent. Tap Resend to send the message" />

	<LinearLayout android:layout_width="match_parent" >

		<Button
			android:id="@+id/negative_button"
			style="@style/Button.Dialog"
			android:layout_marginBottom="@dimen/dialog_bottom_margin"
			android:layout_marginLeft="@dimen/dialog_bottom_margin"
			android:text="@string/cancel" />

		<Button
			android:id="@+id/positive_button"
			style="@style/Button.Dialog"
			android:layout_marginBottom="@dimen/dialog_bottom_margin"
			android:layout_marginLeft="@dimen/dialog_bottom_margin"
			android:layout_marginRight="@dimen/dialog_bottom_margin"
			android:text="@string/ok" />
	</LinearLayout>

</LinearLayout>