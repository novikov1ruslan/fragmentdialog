<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DialogFrame"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".DialogsTester" >

    <TextView
        android:id="@+id/dialog_text"
        style="@style/DialogText"
        android:layout_marginBottom="@dimen/dialog_text_vertical_margin"
        android:layout_marginLeft="@dimen/dialog_horizontal_margin"
        android:layout_marginRight="@dimen/dialog_horizontal_margin"
        android:layout_marginTop="@dimen/dialog_text_vertical_margin"
        android:text="Your message was not sent. Tap Resend to send the message"
        tools:ignore="HardcodedText" />

    <LinearLayout android:layout_width="match_parent" >

        <Button
            android:id="@+id/negative_button"
            style="@style/Button.Dialog.Single"
            android:layout_marginBottom="@dimen/dialog_bottom_margin"
            android:text="@string/cancel"
            android:visibility="gone" />

        <Button
            android:id="@+id/positive_button"
            style="@style/Button.Dialog.Single"
            android:layout_marginBottom="@dimen/dialog_bottom_margin"
            android:text="@string/ok"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>